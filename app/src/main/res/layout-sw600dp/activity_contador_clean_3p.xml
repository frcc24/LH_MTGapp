                    />

                <TextView
                    android:id="@+id/pontuacao_p3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="200sp"
                    android:textStyle="bold"
                    android:shadowRadius="50"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/branco100"
                    android:layout_weight=".02"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player 3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/branco100"
                    android:layout_weight=".2"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:layout_weight=".2"
                    android:gravity="center_vertical|center_horizontal"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_weight=".1" >

                <Button
                    android:id="@+id/bt_p3_mais5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+5"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/transpatente2"
                    android:textSize="28dp"
                    android:background="@drawable/fundo_botao_redondo_escuro_10"
                    android:elevation="2dp"
                    android:textStyle="bold"
                    android:layout_weight=".1"
                    android:gravity="center_vertical|center_horizontal"
                    />

                <Button
                    android:id="@+id/bt_p3_menos5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-5"
                    android:textColor="@color/transpatente2"
                    android:textSize="28dp"
                    android:background="@drawable/fundo_botao_redondo_escuro_10"
                    android:layout_weight=".1"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/simplifica"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>




</LinearLayout>