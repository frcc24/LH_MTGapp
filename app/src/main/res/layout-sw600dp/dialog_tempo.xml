<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo_alerta"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50">


        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_titulo_alerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/simplifica"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:text="ALERTA!"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

    <ProgressBar
        android:padding="15dp"
        android:id="@+id/progressBarTempo"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:max="100"
        android:background="@drawable/fundo_botao_redondo_p1"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAlertaTempo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/hourglass" />

        <TextView
            android:id="@+id/txt_mensagem_alerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/simplifica"
            android:padding="10dp"
            android:text="Mensagem  do alerta"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="start"
            android:id="@+id/bt_alerta_negativo"
            android:text="@string/nao"
            android:textSize="15sp"
            android:fontFamily="@font/simplifica"
            android:textColor="@color/transpatente2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_botao_redondo_p2"
            />

        <Button
            android:layout_marginLeft="15dp"
            android:layout_gravity="end"
            android:id="@+id/bt_alerta_positivo"
            android:fontFamily="@font/simplifica"
            android:text="@string/sim"
            android:textStyle="bold"
            android:textColor="@color/transpatente2"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_botao_redondo_p1"
            />


    </LinearLayout>


</LinearLayout>