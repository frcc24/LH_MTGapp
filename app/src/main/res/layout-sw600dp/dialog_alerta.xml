<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_alerta"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50">


        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_titulo_alerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/simplifica"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:text="ALERTA!"
            android:textSize="35sp"
            android:textStyle="bold" />



    </LinearLayout>

    <TextView
        android:id="@+id/txt_mensagem_alerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/simplifica"
        android:padding="10dp"
        android:text="Mensagem  do alerta"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="start"
            android:id="@+id/bt_alerta_negativo"
            android:text="@string/nao"
            android:textSize="20sp"
            android:fontFamily="@font/simplifica"
            android:textColor="@color/transpatente2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_botao_redondo_p2"
            />

        <Button
            android:layout_marginLeft="20dp"
            android:layout_gravity="end"
            android:id="@+id/bt_alerta_positivo"
            android:fontFamily="@font/simplifica"
            android:text="@string/sim"
            android:textStyle="bold"
            android:textColor="@color/transpatente2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_botao_redondo_p1"
            />


    </LinearLayout>


</LinearLayout>