<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lo_p1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight=".1"
        android:background="@drawable/fundo_botao_redondo_p1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight=".1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_p1_mais1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textStyle="bold"
                android:textColor="@color/transpatente2"

                android:fontFamily="@font/simplifica"
                android:textSize="18dp"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:layout_weight=".1"
                android:elevation="1dp"
                android:gravity="center_vertical|center_horizontal"
                />

            <Button
                android:id="@+id/bt_p1_menos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textColor="@color/transpatente2"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/simplifica"
                android:layout_weight=".1"
                android:gravity="center_vertical|center_horizontal"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_pontuacao_p1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight=".04"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_valor_mod_p1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="bottom|center_horizontal"
                    android:text="-1"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/branco100"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pontuacao_p1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="130dp"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:textStyle="bold"
                    android:shadowRadius="50"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/branco100"
                    android:layout_weight=".2"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lo_contadores_p1"
                android:layout_weight="0.02"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lo_veneno_p1"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:background="@drawable/fundo_botao_redondo_escuro_10"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="5dp">

                    <Button

                        android:id="@+id/bt_veneno_mais_p1"
                        android:layout_weight="0.1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:rotation="270.00"
                        android:padding="10dp"
                        android:background="@drawable/arrow"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txt_valor_veneno_p1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/branco100"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:fontFamily="@font/simplifica"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_weight="0.1"/>

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/editText_verde"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editText_verde"
                            app:srcCompat="@drawable/phyrexia"
                            android:layout_weight="0.1"/>


                    </LinearLayout>


                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/bt_veneno_menos_p1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:rotation="90.00"
                        android:background="@drawable/arrow"
                        android:layout_weight="0.1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_energia_p1"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fundo_botao_redondo_escuro_10"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/bt_energia_mais_p1"
                        android:layout_weight="0.1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:rotation="270.00"
                        android:padding="10dp"
                        android:background="@drawable/arrow"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/energia"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/editText_verde"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editText_verde"
                            app:srcCompat="@drawable/energy"
                            android:layout_weight="0.1"/>

                        <TextView
                            android:id="@+id/txt_valor_energia_p1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/branco100"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:fontFamily="@font/simplifica"
                            android:layout_gravity="center_vertical|end"
                            android:layout_weight="0.1"/>



                    </LinearLayout>


                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/bt_energia_menos_p1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:rotation="90.00"
                        android:background="@drawable/arrow"
                        android:layout_weight="0.1"/>

                </LinearLayout>




            </LinearLayout>

            <TextView
                android:id="@+id/lo_fixer_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textColor="@color/color_p1"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_weight=".1" >

            <Button
                android:id="@+id/bt_p1_mais5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textColor="@color/transpatente2"
                android:textSize="18dp"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:elevation="2dp"
                android:textStyle="bold"
                android:layout_weight=".1"
                android:fontFamily="@font/simplifica"
                android:gravity="center_vertical|center_horizontal"
                />

            <Button
                android:id="@+id/bt_p1_menos5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-5"
                android:textColor="@color/transpatente2"
                android:textSize="18dp"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:layout_weight=".1"
                android:textStyle="bold"
                android:fontFamily="@font/simplifica"
                android:gravity="center_vertical|center_horizontal"
                />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/lo_menu"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/browser_actions_divider_color"
        android:layout_weight=".16" >

        <ImageButton
            android:id="@+id/imageButton_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:layout_weight=".1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/ic_action_reload" />

        <ImageButton
            android:id="@+id/imageButton_dados"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:alpha="0.9"
            android:layout_weight=".1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/ic_action_dice" />

        <ImageButton
            android:id="@+id/imageButton_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_weight=".1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/ic_action_settings" />

        <ImageButton
            android:id="@+id/imageButton_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:layout_weight=".1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            app:srcCompat="@android:drawable/ic_menu_recent_history" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_config_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:layout_gravity="center_vertical"
        android:layout_weight=".0"
        android:background="@drawable/fundo_botao_redondo_p3"
        android:gravity="center_vertical|center_horizontal"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <LinearLayout
