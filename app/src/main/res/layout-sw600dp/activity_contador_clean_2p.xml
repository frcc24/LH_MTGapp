                android:id="@+id/bt_p2_mais1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textColor="@color/transpatente2"
                android:textSize="18dp"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:layout_weight=".1"
                android:textStyle="bold"
                android:elevation="1dp"
                android:fontFamily="@font/simplifica"
                android:gravity="center_vertical|center_horizontal"
                />

            <Button
                android:id="@+id/bt_p2_menos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textColor="@color/transpatente2"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/simplifica"
                android:layout_weight=".1"
                android:gravity="center_vertical|center_horizontal"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_pontuacao_p2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight=".04"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_valor_mod_p2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom|center_horizontal"
                    android:text="-1"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/branco100"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/pontuacao_p2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="130dp"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:textStyle="bold"
                    android:shadowRadius="50"
                    android:fontFamily="@font/simplifica"
                    android:textColor="@color/branco100"
                    android:layout_weight=".2"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lo_contadores_p2"
                android:layout_weight="0.02"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lo_veneno_p2"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:background="@drawable/fundo_botao_redondo_escuro_10"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/bt_veneno_mais_p2"
                        android:layout_weight="0.1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:rotation="270.00"
                        android:padding="10dp"
                        android:background="@drawable/arrow"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txt_valor_veneno_p2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_weight="0.1"
                            android:fontFamily="@font/simplifica"
                            android:text="0"
                            android:textColor="@color/branco100"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/editText_verde"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editText_verde"
                            app:srcCompat="@drawable/phyrexia"
                            android:layout_weight="0.1"/>


                    </LinearLayout>


                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/bt_veneno_menos_p2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:rotation="90.00"
                        android:background="@drawable/arrow"
                        android:layout_weight="0.1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_energia_p2"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fundo_botao_redondo_escuro_10"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/bt_energia_mais_p2"
                        android:layout_weight="0.1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:rotation="270.00"
                        android:padding="10dp"
                        android:background="@drawable/arrow"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/energia2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/editText_verde"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editText_verde"
                            app:srcCompat="@drawable/energy"
                            android:layout_weight="0.1"/>

                        <TextView
                            android:id="@+id/txt_valor_energia_p2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/branco100"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:fontFamily="@font/simplifica"
                            android:layout_gravity="center_vertical|end"
                            android:layout_weight="0.1"/>



                    </LinearLayout>


                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/bt_energia_menos_p2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:rotation="90.00"
                        android:background="@drawable/arrow"
                        android:layout_weight="0.1"/>

                </LinearLayout>




            </LinearLayout>
            <TextView
                android:id="@+id/lo_fixer_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textColor="@color/color_p2"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_weight=".1" >

            <Button
                android:id="@+id/bt_p2_mais5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5"
                android:fontFamily="@font/simplifica"
                android:textColor="@color/transpatente2"
                android:textSize="18dp"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:elevation="2dp"
                android:textStyle="bold"
                android:layout_weight=".1"
                android:gravity="center_vertical|center_horizontal"
                />

            <Button
                android:id="@+id/bt_p2_menos5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-5"
                android:textColor="@color/transpatente2"
                android:textSize="18dp"
                android:background="@drawable/fundo_botao_redondo_escuro_10"
                android:layout_weight=".1"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/simplifica"
                />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>