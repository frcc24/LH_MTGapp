<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:elevation="5dp"
    android:layout_margin="20dp"
    android:background="@drawable/rodape">


    <TextView
        android:id="@+id/txt_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="card name"
        android:textAlignment="viewStart"
        android:textColor="@color/textColorConfig"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_mana_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="mana cost"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_card_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/textColorConfig"
        android:text="tipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_card_name" />

    <TextView
        android:id="@+id/txt_raridade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginEnd="8dp"
        android:text="raridade"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_type"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_expansion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorConfig"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="expansao"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_type" />
</androidx.constraintlayout.widget.ConstraintLayout>