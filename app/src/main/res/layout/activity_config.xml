<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity.ConfigActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/rodape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/rodape2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3">

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/simplifica"
            android:text="Timer (s)"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/cb_90"
            app:layout_constraintStart_toStartOf="@+id/cb_45"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/simplifica"
            android:text="90"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_60" />

        <CheckBox
            android:id="@+id/cb_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/simplifica"
            android:text="60"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_45"
            app:layout_constraintStart_toEndOf="@+id/cb_45" />

        <CheckBox
            android:id="@+id/cb_45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/simplifica"
            android:text="45"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimer" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/txt_configuracoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/simplifica2"
        android:text="@string/configuraces"
        android:textAllCaps="true"
        android:textColor="@color/textColorConfig"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/simplifica"
            android:text="@string/hp_inicial"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/cb_40"
            app:layout_constraintStart_toStartOf="@+id/cb_20"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/simplifica"
            android:text="40"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_30" />

        <CheckBox
            android:id="@+id/cb_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/simplifica"
            android:text="30"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_20"
            app:layout_constraintStart_toEndOf="@+id/cb_20" />

        <CheckBox
            android:id="@+id/cb_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/simplifica"
            android:text="20"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50"
        android:checkedButton="@+id/rb_2players"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <TextView
            android:id="@+id/textViewJogadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/simplifica"
            android:text="Jogadores"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group_players"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/rb_2players"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewJogadores">

            <RadioButton
                android:id="@+id/rb_2players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:fontFamily="@font/simplifica"
                android:text="2"
                android:textColor="@color/textColorConfig"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb_3players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/simplifica"
                android:text="3"
                android:textColor="@color/textColorConfig"
                android:textSize="20sp" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50"
        android:checkedButton="@+id/rb_2players"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <CheckBox
            android:id="@+id/cb_cont_energia"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="@font/simplifica"
            android:text="@string/exibir_contador_de_energia"
            android:textColor="@color/textColorConfig"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/bt_mana_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/fundo_botao_redondo2"
        android:fontFamily="@font/simplifica2"
        android:padding="15dp"
        android:text="@string/mana_base_calculator"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_br" />

    <TextView
        android:id="@+id/txt_version_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/simplifica2"
        android:text="TextView"
        android:textColor="@color/textColorConfig"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txt_Idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/simplifica2"
        android:text="@string/idioma"
        android:textColor="@color/color_p2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_br"
        app:layout_constraintStart_toStartOf="@+id/bt_mana_base"
        app:layout_constraintTop_toTopOf="@+id/img_br"
        app:layout_constraintVertical_bias="0.32999998" />

    <ImageView
        android:id="@+id/img_eua"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/txt_Idioma"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/eua_flag" />

    <ImageView
        android:id="@+id/img_br"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_eua"
        app:layout_constraintTop_toTopOf="@+id/img_eua"
        app:srcCompat="@drawable/br_flag" />

    <ImageView
        android:id="@+id/img_es"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_br"
        app:layout_constraintTop_toTopOf="@+id/img_br"
        app:srcCompat="@drawable/es_flag" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_donate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/fundo_botao_redondo2"
        android:fontFamily="@font/simplifica2"
        android:padding="15dp"
        android:text="@string/creditos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_mana_base"
        app:layout_constraintTop_toBottomOf="@+id/bt_mana_base" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/fundo_botao_redondo_escuro_50"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout4"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout4"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

        <TextView
            android:id="@+id/textView_txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@font/simplifica"
            android:text="Fonte"
            android:textColor="@color/textColorConfig" />

        <SeekBar
            android:id="@+id/seekBar_txt_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:max="8"
            android:min="5"
            android:padding="2dp"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="insideOverlay" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_botao_redondo_escuro_50"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout5"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout5"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2">

        <ImageView
            android:id="@+id/imageViewSom"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal|center_vertical"
            app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

        <Switch
            android:id="@+id/switchSom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>